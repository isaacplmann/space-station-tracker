{
  "name": "space-station-tracker",
  "version": "1.2.0",
  "main": "dist/server/index.js",
  "private": true,
  "devDependencies": {
    "@nx/eslint-plugin": "^16.7.4",
    "@nx/jest": "16.7.4",
    "@nx/js": "16.7.4",
    "@nx/linter": "^16.7.4",
    "@nx/plugin": "^16.7.4",
    "@nx/vite": "^16.7.4",
    "@nx/webpack": "^16.7.4",
    "@swc-node/register": "~1.4.2",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.51",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.16.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": "^13.2.3",
    "nx": "16.7.4",
    "nx-cloud": "latest",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "npm run build --workspace=server && npm run build --workspace=web",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,WEB\" -c \"bgMagenta.bold,bgBlue.bold,bgGreen.bold\" \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:web": "npm run dev --workspace=web",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prepare": "node ./.husky/prepare.js",
    "start": "npm run start --workspace=server",
    "test": "npm run test:ci --workspace=server && npm run test:ci --workspace=web"
  },
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "workspaces": [
    "server",
    "shared",
    "web"
  ],
  "dependencies": {
    "@nx/devkit": "16.7.4",
    "@swc/helpers": "~0.5.0",
    "tslib": "^2.3.0"
  }
}
